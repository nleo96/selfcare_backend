{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "es2020": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "no-irregular-whitespace": "off"
  }
}
